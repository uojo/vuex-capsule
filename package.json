{
  "name": "vuex-capsule",
  "version": "2.0.0",
  "description": "简化 vuex 在项目中的应用编码，抽象 vuex 中常用逻辑，定义了通用的 mutations、actions、types",
  "keywords": [
    "vuex",
    "action",
    "vue"
  ],
  "scripts": {
    "build": "babel src --out-dir dist",
    "lint": "standard --fix --env jest",
    "test": "npm run lint && jest test --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uojo/vuex-capsule"
  },
  "files": [
    "src",
    "dist"
  ],
  "main": "dist/index.js",
  "author": "uojonet@163.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uojo/vuex-capsule/issues"
  },
  "homepage": "https://github.com/uojo/vuex-capsule",
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.21",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.4.2",
    "jest-serializer-vue": "^2.0.2",
    "sinon": "^6.1.4",
    "standard": "^11.0.1",
    "vue": "^2.5.16",
    "vue-jest": "^2.6.0",
    "vue-template-compiler": "^2.5.16",
    "vuex": "^3.0.1"
  },
  "peerDependencies": {},
  "dependencies": {
    "deep-assign": "2.0.0",
    "deep-copy": "^1.4.2",
    "lodash": "4.17.4"
  },
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  },
  "standard": {
    "env":["jest"],
    "globals":[],
    "ignore": [
      "/dist/"
    ]
  }
}
